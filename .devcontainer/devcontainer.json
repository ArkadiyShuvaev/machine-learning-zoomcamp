// For format details, see https://aka.ms/devcontainer.json.
// For config options, see the README at:
// https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "ML ZoomCamp",
	"image": "mcr.microsoft.com/devcontainers/python:3.11",

	// Full uv mode: install uv, create venv, sync dependencies from pyproject + uv.lock
	"postCreateCommand": "curl -LsSf https://astral.sh/uv/install.sh | sh && uv venv --python 3.11 && uv sync",

	// Automatically use the virtual environment for VSCode Python
	"customizations": {
		"vscode": {
			"settings": {
				"python.defaultInterpreterPath": ".venv/bin/python"
			},
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance"
			]
		}
	}
}
