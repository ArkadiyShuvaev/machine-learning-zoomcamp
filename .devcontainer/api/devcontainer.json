{
  "name": "ML ZoomCamp - Notebook + API",
  "dockerComposeFile": [
    "../../docker-compose.yml",
    "../../docker-compose.api.yml"
  ],
  "service": "notebook",
  "forwardPorts": [8000],
  "runServices": [
    "notebook",
    "api"
  ],
  "workspaceFolder": "/workspaces/ml-zoomcamp",
  "postCreateCommand": "curl -LsSf https://astral.sh/uv/install.sh | sh && uv venv --system-site-packages && uv sync",
  "containerEnv": {
    "PYTHONPATH": "/workspaces/ml-zoomcamp",
    "UV_VENV_CLEAR": 1
  },
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": ".venv/bin/python"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "streetsidesoftware.code-spell-checker",
        "mechatroner.rainbow-csv",
        "shardulm94.trailing-spaces",
        "redhat.vscode-yaml"
      ]
    }
  }
}